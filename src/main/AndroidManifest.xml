<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
>


    <application android:icon="@drawable/icon"
            android:label="@string/app_name">
        <activity android:name=".MainActivity" android:exported="true" android:label="@string/activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CreditsActivity"
                  android:exported="true" android:label="@string/activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.CREDITS"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
